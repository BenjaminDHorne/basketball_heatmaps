<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Player Input{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <ul id="sidebar" class="nav nav-stacked affix sidebar-nav">
                        {% block sidebar %}{% endblock %}
                    </ul>
                </div>
                <div class="col-md-8">
                    {% for msg in app.session.flashbag.get('success') %}
                        <div class="alert alert-success">{{ msg }}</div>
                    {% endfor %}
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
