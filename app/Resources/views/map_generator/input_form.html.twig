{% extends 'base.html.twig' %}
{% macro custom_form_group(makesValue, attemptsValue) %}
        <div class="form-group">
            <div class="col-md-2">
                {{ form_label(makesValue) }}
            </div>
            <div class="col-md-4">
                {{ form_widget(makesValue, { 'attr': { 'value': random(10) } }) }}
            </div>
            <div class="col-md-4">
                {{ form_widget(attemptsValue, { 'attr': { 'class': 'last-input', 'value': 10 } }) }}
            </div>
         </div>
{% endmacro %}

